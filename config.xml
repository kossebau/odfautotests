<config xmlns="http://www.example.org/documenttests" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.example.org/documenttests documenttests.xsd">
	<target name="Calligra" types="text" inputs="zip_v1_0 zip_v1_1 zip_v1_2"
		output="zip_v1_2">
		<command exe="/home/oever/work/nokia/inst/bin/calligrawords">
			<env name="DISPLAY" />
			<env name="KDEDIRS" />
			<env name="HOME" />
			<argument value="--roundtrip-filename" />
			<outfile />
			<infile />
		</command>
	</target>
	<target name="Abiword" types="text" input="zip_v1_0 zip_v1_1 zip_v1_2"
		output="zip_v1_1">
		<command exe="/bin/cp">
			<infile />
			<outfile />
		</command>
		<command exe="/usr/bin/abiword">
			<argument value="-t" />
			<argument value="odt" />
			<infile />
		</command>
	</target>
	<target name="LibreOffice" types="text spreadsheet presentations"
		input="zip_v1_0 zip_v1_1 zip_v1_2" output="zip_v1_2">
		<command exe="/opt/libreoffice3.5/program/soffice">
			<argument value="--headless" />
			<argument value="--convert-to" />
			<argument value="odt:writer8" />
			<argument value="--outdir" />
			<outdir />
			<infile />
		</command>
	</target>
</config>
